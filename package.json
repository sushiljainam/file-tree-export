{
    "name": "file-structure-generator",
    "version": "1.0.0",
    "description": "Generate file structure from local folder",
    "main": "dist/file-structure-generator.js",
    "types": "dist/file-structure-generator.d.ts",
    "scripts": {
        "build": "tsc",
        "start": "node dist/file-structure-generator.js",
        "prepublishOnly": "npm run build",
        "prepare": "husky install"
    },
    "bin": {
        "file-structure-generator": "./dist/file-structure-generator.js"
    },
    "keywords": [
        "file",
        "structure",
        "generator",
        "tree"
    ],
    "author": "Your Name",
    "license": "MIT",
    "dependencies": {
        "fast-xml-parser": "^4.2.0",
        "ignore": "^5.2.0",
        "js-yaml": "^4.1.0"
    },
    "devDependencies": {
        "@types/js-yaml": "^4.0.5",
        "@types/node": "^18.11.18",
        "husky": "^9.1.6",
        "lint-staged": "^15.2.10",
        "typescript": "^4.9.4"
    },
    "lint-staged": {
        "src/**/*.ts": [
            "npm run build",
            "git add dist"
        ]
    }
}
